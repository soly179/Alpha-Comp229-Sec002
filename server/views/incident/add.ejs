<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!--Content for the Add page-->
<div class="container">
  <div class="row">
      <div class="offset-md-2 col-md-8">
      <h1><%= title %></h1>

    <form class ="form" method ="POST">
        <div class="form-group">
            <label for="nameTextField">IncidentTitle</label>
            <input type="text" class ="form-control"
            id="nameTextField"
            placeholder="Enter the Incident Title"
            name="name" required>
        </div>
        <div class="form-group">
            <label for="customerTextField">Customer</label>
            <input type="text" class ="form-control"
            id="customerTextField"
            placeholder="Enter the name of Customer"
            name="customer" required>
        </div>

    <div class="form-group">
        <label for="recordnumberTextField">RecordNumber</label>
        <input type="text" class ="form-control"
        id="recordnumberTextField"
        placeholder="Enter the Record Number"
        name="recordnumber" required>
    </div>


    <div class="form-group">
        <label for="descriptionTextField">Description</label>
        <textarea type="text" class ="form-control"
        id="descriptionTextArea"
        placeholder="Enter the brief description of Incident"
        name="description" required></textarea>
    </div>

    <div class="form-group">
        <label for="priorityTextField">Priority</label>
        <input type="text" class ="form-control"
        id="priorityTextField"
        placeholder="Enter the priority of Incident"
        name="priority" required>
    </div>

    <button class="btn btn-primary" type="submit">
        <i class="fas fa-edit"></i> Submit</button>
        <a href="/incident-list" class="btn btn-warning">
        <i class ="fas fa-undo"></i> Cancel</a>
    </form>  
    </div>  
</div>
</div>
<%- include ../partials/bottom_nav.ejs %>  

