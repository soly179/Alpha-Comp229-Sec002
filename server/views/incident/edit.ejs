<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>
<!--Content for the Edit page-->
<section class="editIncident">
    <div class="container">
        <div class="row">
            <div class="offset-md-2 col-md-8">
                <div class="editTitle">
                    <h1><b><%= title %></b></h1>

                </div>

                <div class="editdet">
                    <form class ="form" method ="POST">
                        <div class="form-group">
                            <label for="nameTextField">IncidentTitle</label>
                            <input type="text" class ="form-control"
                            id="nameTextField"
                            placeholder="Enter the Incident Title"
                            name="name" 
                            value="<%= incident.name %>"
                            required>
                        </div>
                        <div class="form-group">
                            <label for="customerTextField">Customer</label>
                            <input type="text" class ="form-control"
                            id="customerTextField"
                            placeholder="Enter the Customer' Nmae"
                            name="customer" 
                            value="<%= incident.customer %>"
                            required>
                        </div>
                
                    <div class="form-group">
                        <label for="TextField">RecordNumber</label>
                        <input type="text" class ="form-control"
                        id="recordnumberTextField"
                        placeholder="Enter the Year of Publication"
                        name="recordnumber" 
                        value="<%= incident.recordnumber %>"
                        required>
                    </div>
                
                
                    <div class="form-group">
                        <label for="descriptionTextField">Description</label>
                        <textarea type="text" class ="form-control"
                        id="descriptionTextArea"
                        placeholder="Enter the brief description of incident"
                        name="description" 
                        required>
                        <%= incident.description %>
                     </textarea>
                    </div>
                
                    <div class="form-group">
                        <label for="priorityTextField">Priority</label>
                        <input type="text" class ="form-control"
                        id="priorityTextField"
                        placeholder="Enter the priority of incident"
                        name="priority" 
                        value="<%= incident.priority %>"
                        required>
                    </div>
                
                    <button class="btn btn-primary" type="submit">
                        <i class="fas fa-edit"></i> Submit</button>
                        <a href="/incident-list" class="btn btn-warning">
                        <i class ="fas fa-undo"></i> Cancel</a>
                    </form>  

                </div>
            
      
          
          </div>  
      </div>
      </div>

</section>


  <%- include ../partials/bottom_nav.ejs %>  

